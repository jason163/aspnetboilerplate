<?xml version="1.0" encoding="utf-8"?>
<SQLConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <SQLList>
    <!-- 获取所有渠道列表 -->
    <SQL SQLKey="GetAllChannelList" ConnectionKey="Read">
      <Text>
        <![CDATA[
SELECT *
  FROM ECMaster.dbo.AuthUser
        ]]>
      </Text>
    </SQL>
    <!-- 获取指定状态的所有渠道列表 -->
    <SQL SQLKey="GetAllChannelListByStatus" ConnectionKey="Read">
      <Text>
        <![CDATA[
SELECT [ChannelID]
      ,[ChannelName]
      ,[CompanyCode]
      ,[CommonStatus]
      ,[Memo]
      ,[AppID]
      ,[ChannelRefCode]
      ,[SecretKey]
      ,[APIUrl]
      ,[Bak1]
      ,[Bak2]
      ,[Bak3]
  FROM [ECMaster].[dbo].[Channel](NOLOCK)
  WHERE [CommonStatus] = @Status        
        ]]>
      </Text>
    </SQL>
    <!-- 删除Channel信息:更改为删除状态-999 -->
    <SQL SQLKey="DeleteChannel" ConnectionKey="Write">
      <Text>
        <![CDATA[
            UPDATE ECMaster.dbo.Channel SET CommonStatus=-999
            WHERE ChannelID = @ChannelID
             AND CompanyCode =@CompanyCode 
		          ]]>
      </Text>
    </SQL>
    <!-- 创建Channel信息 -->
    <SQL SQLKey="InsertChannel" ConnectionKey="Write">
      <Text>
        <![CDATA[
                INSERT INTO ECMaster.dbo.Channel
                (
                    [ChannelID],
                [ChannelName],
                [CompanyCode],
                [CommonStatus],
                [Memo],
                [AppID],
                [ChannelRefCode],
                [SecretKey],
                [APIUrl],
                [Bak1],
                [Bak2],
                [Bak3]

                ) 
                VALUES 
                (
                    @ChannelID,
                @ChannelName,
                @CompanyCode,
                @CommonStatus,
                @Memo,
                @AppID,
                @ChannelRefCode,
                @SecretKey,
                @APIUrl,
                @Bak1,
                @Bak2,
                @Bak3

                )
          ]]>
      </Text>
    </SQL>
    <!-- 更新Channel信息 -->
    <SQL SQLKey="UpdateChannel" ConnectionKey="Write">
      <Text>
        <![CDATA[
            UPDATE ECMaster.dbo.Channel SET 
                [ChannelName] = @ChannelName,
                [CommonStatus] = @CommonStatus,
                [Memo] = @Memo,
                [AppID] = @AppID,
                [ChannelRefCode] = @ChannelRefCode,
                [SecretKey] = @SecretKey,
                [APIUrl] = @APIUrl,
                [Bak1] = @Bak1,
                [Bak2] = @Bak2,
                [Bak3] = @Bak3
 
            WHERE ChannelID = @ChannelID
               AND CompanyCode =@CompanyCode 
          ]]>
      </Text>
    </SQL>
    <!-- 加载Channel信息 -->
    <SQL SQLKey="LoadChannel" ConnectionKey="Write">
      <Text>
        <![CDATA[
                SELECT 
                * 
                FROM ECMaster.dbo.Channel WITH(NOLOCK) 
                WHERE ChannelID = @ChannelID
                AND CompanyCode =@CompanyCode
          ]]>
      </Text>
    </SQL>

    <!-- 检查ChannelID是否重复 -->
    <SQL SQLKey="CheckChannelIDIsExist" ConnectionKey="Write">
      <Text>
        <![CDATA[
                SELECT 
                Count(1) 
                FROM ECMaster.dbo.Channel WITH(NOLOCK) 
                WHERE ChannelID = @ChannelID
          ]]>
      </Text>
    </SQL>
    
    
    <!-- 分页查询Channel信息 -->
    <SQL SQLKey="QueryChannelList" ConnectionKey="Read">
      <Text>
        <![CDATA[
    SELECT COUNT(1) AS TotalCount
      FROM ECMaster.dbo.Channel WITH(NOLOCK)
      #STRWHERE#        
        
    SELECT TOP @PageSize rownumber
	                      ,ChannelID
                ,ChannelName
                ,CompanyCode
                ,CommonStatus
                ,Memo
                ,AppID
                ,ChannelRefCode
                ,SecretKey
                ,APIUrl
                ,Bak1
                ,Bak2
                ,Bak3

    FROM
    (
      SELECT 
        ROW_NUMBER() over(order by @SortFields) as rownumber
                        ,ChannelID
                ,ChannelName
                ,CompanyCode
                ,CommonStatus
                ,Memo
                ,AppID
                ,ChannelRefCode
                ,SecretKey
                ,APIUrl
                ,Bak1
                ,Bak2
                ,Bak3
	
      FROM ECMaster.dbo.Channel WITH(NOLOCK)
        #STRWHERE#
      ) T WHERE rownumber > (@PageIndex * @PageSize) 
            ]]>
      </Text>
    </SQL>
  </SQLList>
</SQLConfig>